

<h1>Friends</h1>
<table class="table table-hover table-bordered">
  <thead class="">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Twitter</th>
  
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.twitter %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New friend', new_friend_path, class:'btn btn-secondary' %>
